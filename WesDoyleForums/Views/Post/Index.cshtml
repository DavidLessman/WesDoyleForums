@model WesForum.Models.Post.PostIndexModel

<h1>@Model.Title</h1>

<div>
  Author: @Model.AuthorName (@Model.AuthorRating)
  Created: @Model.Created
</div>

<div>
  @Model.PostContent
</div>

@if (Model.Replies.Any())
{
  foreach(var reply in Model.Replies)
  {
<div>
  <div>
    Author: @reply (@reply.AuthorRating)
    Created: @reply.Created
  </div>

  <div>
    @reply.ReplyContent
  </div>
</div>
  }
}
